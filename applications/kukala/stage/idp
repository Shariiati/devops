#apiVersion: apps/v1
kind: Deployment
metadata:
  name: kukala-idp-api
  namespace: stage-kukala
spec:
  selector:
    matchLabels:
      app: kukala-idp-api
  template:
    metadata:
      labels:
        app: kukala-idp-api
    spec:
      containers:
      - name: kukala-idp-api
        image: docker.sohato.com/kukala/idp/stage:v
        resources:
          limits:
            memory: "512Mi"
            cpu: "500m"
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: kukala-idp-api
  namespace: stage-kukala
spec:
  selector:
    app: kukala-idp-api
  ports:
  - port: 80
    targetPort: 80
